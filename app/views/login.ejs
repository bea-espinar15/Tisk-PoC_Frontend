<!DOCTYPE html>
<html lang="<%= locale %>">

<head>
    <%- include("head.ejs") %>
    <link rel="stylesheet" href="/css/modal.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
    <!-- ------ Response Modal ------ -->
    <% if (showModal) { %>
    <%- include("response-modal.ejs") %>
    <% } %>

    <!-- ------ Content ------ -->
    <div class="div-container-auth">
        <div class="div-auth">
            <h1><%= __("login") %></h1>
            <form method="post" action="/login/<%= locale %>">
                <!-- Email -->
                <label for="input-email"><%= __("email") %></label>
                <input id="input-email" name="email" type="text" placeholder="<%= __("email_placeholder") %>">
                <% if (result != null && !showModal && result.data.field == "email") { %>
                <span class="span-error"><%= result.message %></span>
                <% } %>
                <!-- Password -->
                <label for="input-pass"><%= __("password") %></label>
                <input id="input-pass" name="password" type="password" placeholder="<%= __("password_login_placeholder") %>">
                <% if (result != null && !showModal && result.data.field == "password") { %>
                <span class="span-error"><%= result.message %></span>
                <% } %>
                <!-- Submit -->
                <button type="submit"><%= __("sign_in") %></button>
            </form>
            <p><%= __("new_here") %> <a href="/signup/<%= locale %>"><%= __("create_an_account") %></a></p>
        </div>
    </div>   

    <script src="/js/modal.js"></script>
</body>

</html>