<!DOCTYPE html>
<html lang="<%= locale %>">

<head>
    <%- include("head.ejs") %>
    <link rel="stylesheet" href="/css/modal.css">
    <link rel="stylesheet" href="/css/auth.css">    
</head>

<body>
    <!-- ------ Response Modal ------ -->
    <% if (showModal) { %>
    <%- include("response-modal.ejs") %>
    <% } %>

    <!-- ------ Content ------ -->
    <div class="div-container-auth">
        <div class="div-auth">
            <h1><%= __("create_account") %></h1>
            <form method="post" action="/signup/<%= locale %>">
                <!-- Username -->
                <label for="input-username"><%= __("username") %></label>
                <input id="input-username" name="username" type="text" placeholder="<%= __("username_placeholder") %>">
                <% if (result != null && !showModal && result.data.field == "username") { %>
                <span class="span-error"><%= result.message %></span>
                <% } %>
                <!-- Email -->
                <label for="input-email"><%= __("email") %></label>
                <input id="input-email" name="email" type="text" placeholder="<%= __("email_placeholder") %>">
                <% if (result != null && !showModal && result.data.field == "email") { %>
                <span class="span-error"><%= result.message %></span>
                <% } %>
                <!-- Password -->
                <label for="input-pass"><%= __("password") %></label>
                <input id="input-pass" name="password" type="password" placeholder="<%= __("password_sign_up_placeholder") %>">
                <% if (result != null && !showModal && result.data.field == "password") { %>
                <span class="span-error"><%= result.message %></span>
                <% } %>
                <!-- Submit -->
                <button type="submit"><%= __("sign_up") %></button>
            </form>
            <p><%= __("already_have_account") %> <a href="/login/<%= locale %>"><%= __("login") %></a></p>
        </div>
    </div>    

    <script src="/js/main.js"></script>
    <script src="/js/modal.js"></script>
</body>

</html>